#!/bin/sh

# A script that sets up the environment for all other programs at login.
# This should really only be used for adding environment variables.

if [ -d "${HOME}/.nix-profile/etc/profile.d" ]; then
    for i in "${HOME}/.nix-profile/etc/profile.d/"*.sh; do
        if [ -r "${i}" ]; then
            . "${i}"
        fi
    done
fi

export ENV="${HOME}/.env"
export EDITOR="nvim"
export PAGER="less"
export LS_COLORS="pi=00;33:cd=01;33:di=01;34:so=01;31:ln=00;36:ex=01;32:bd=01;33:or=00;31:fi=00;00"
export PATH="${HOME}/.local/bin:${HOME}/bin:${PATH}"
export PYTHONPATH="${HOME}/lib/python:${PYTHONPATH}"

export CARGO_HOME="${HOME}/.cargo"
export RUSTUP_HOME="${HOME}/.rustup"

if [ -e "${HOME}/.config/search-engines/google-api-key" ]
then
    read -r GOOGLE_SEARCH_API_KEY < "${HOME}/.config/search-engines/google-api-key"
    read -r GOOGLE_SEARCH_ENGINE_ID < "${HOME}/.config/search-engines/google-engine-id"
    export GOOGLE_SEARCH_API_KEY GOOGLE_SEARCH_ENGINE_ID
fi

if [ -e "${HOME}/.config/search-engines/tavily-api-key" ]
then
    read -r TAVILY_API_KEY < "${HOME}/.config/search-engines/tavily-api-key"
    export TAVILY_API_KEY
fi

if [ -e "${HOME}/.config/ai-keys/gemini" ]
then
    read -r GEMINI_API_KEY < "${HOME}/.config/ai-keys/gemini"
    export GEMINI_API_KEY
fi

if [ -e "${HOME}/.config/ai-keys/openai" ]
then
    read -r OPENAI_API_KEY < "${HOME}/.config/ai-keys/openai"
    export OPENAI_API_KEY
fi

if [ -e "${HOME}/.config/ai-keys/anthropic" ]
then
    read -r ANTHROPIC_API_KEY < "${HOME}/.config/ai-keys/anthropic"
    export ANTHROPIC_API_KEY
fi

if [ -e "${HOME}/.config/ai-keys/openrouter" ]
then
    read -r OPENROUTER_API_KEY < "${HOME}/.config/ai-keys/openrouter"
    export OPENROUTER_API_KEY
fi

if [ -e "${HOME}/.config/ai-keys/vertex" ]
then
    read -r GOOGLE_API_KEY < "${HOME}/.config/ai-keys/vertex"
    read -r GOOGLE_CLOUD_PROJECT < "${HOME}/.config/ai-keys/vertex-project"
    export GOOGLE_API_KEY GOOGLE_CLOUD_PROJECT
    export GOOGLE_CLOUD_LOCATION=global
fi

case "$(uname)" in
    FreeBSD)
        export CARGO_HOME="${CARGO_HOME}_freebsd"
        export RUSTUP_HOME= "${RUSTUP_HOME}_freebsd"
        ;;
esac
case "$(uname -m)" in
    (i386|i686)
        export CARGO_HOME="${CARGO_HOME}_x32"
        export RUSTUP_HOME="${RUSTUP_HOME}_x32"
        ;;
esac

if [ -d "${CARGO_HOME}/bin" ]
then
    export PATH="${CARGO_HOME}/bin:${PATH}"
fi

if [ -e "${CARGO_HOME}/env" ]
then
    . "${CARGO_HOME}/env"
fi

# If there's a profile for this specific host, then source it
if [ -e "${HOME}/.config/$(uname -n).profile" ]
then
    . "${HOME}/.config/$(uname -n).profile"
fi
